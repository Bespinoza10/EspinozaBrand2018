<div class="col s12 l12">
  <%= form_for @contact do |f| %>
    <div class="row">

      <div class="input-field col s12 m4 l4">
        <%= f.label :name %>
        <%= f.text_field :name, required: true %>
      </div>


      <div class="input-field col s12 m4 l4">
        <%= f.label :email%>
        <%= f.email_field :email, required: true%>
      </div>

      <div class="input-field col s12 m4 l4">
        <%= f.label :phone%>
        <%= f.telephone_field :phone, required: true%>
      </div>

      <div class="input-field col s12 m12 l12">
        <%= f.label :message%>
        <%= f.text_area :message, as: :text, class: "materialize-textarea"%>
      </div>


      <div class="input-field col s12 m12 l12 hide">
        <%= f.label :nickname %>
        <%= f.text_field :nickname, hint: 'leave this field blank' %>
      </div>

      <div class="input-field col s12 m12 l12">
        <button class="btn waves-effect waves-light amarillo" type="submit" name="action">Get In Touch With Us</button>
      </div>

    </div>
  <%end%>
</div>
